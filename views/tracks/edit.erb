<div class="edit_page">
  <h1 class="nunito">Edit Track</h1>
  <form class="edit_form" action="/tracks/<%= @track.id %>" method="post">
    <div class="input_box">
      <label for="cat_name">Category: </label>
      <select name="category_id" value="<%= @track.category_id %>">
        <% for category in @categories %>
        <option value="<%= category.id %>" <%= "selected" if category.id == @track.category_id %>><%= category.name %></option>
        <% end %>
      </select>
      <br><br>
      <label for="merch_name">Merchant: </label>
      <select name="merchant_id">
        <% for merchant in @merchants %>
        <option value="<%= merchant.id %>" <%= "selected" if merchant.id == @track.merchant_id %>><%= merchant.name %></option>
        <% end %>
      </select>
      <br><br>
      <label for="amount">Amount (Â£):</label>
      <input id ="amount" type="text" name="amount" value="<%= @track.amount %>">
    </div>

    <br><br>
    <input type="submit" value="Update" class="button">
  </form>
</div>
