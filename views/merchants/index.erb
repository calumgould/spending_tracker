<h1>Your Merchants</h1>

<h2><a href="merchants/new">Create New</a></h2>

<% @merchants.each do |merchant| %>
  <p><%= merchant.name() %></p>
  <p><a href="merchants/<%= merchant.id %>">Edit</a></p>
  <form action="/merchants/<%= merchant.id %>/delete" method="post">
    <input type="submit" name="Delete" value="Delete">
  </form>
  <hr />
<% end %>
